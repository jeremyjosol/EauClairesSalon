@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="form-container">

  @using (Html.BeginForm())
  {
    <h4>Client Contact:</h4>
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", @class = "form-control", autocomplete = "off", required = "required" })
    @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control", autocomplete = "off", required = "required" })
    @Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = "Phone #", @class = "form-control", autocomplete = "off", required = "required" })
    <br />
    <h4>Choose Date:</h4>
    @Html.TextBoxFor(model => model.ScheduledAppointment, new { type = "datetime-local", @class = "form-control", autocomplete = "off", required = "required" })
    <br />
    <h4>Select Stylist:</h4>
    @Html.DropDownList("StylistId", null, htmlAttributes: new { @class = "form-control", required = "required" })
    <br />
    <input type="submit" value="Add" class="btn btn-light btn-sm" />
  }
</div>
<br />