@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="form-container">
  <h2>INQUIRE</h2>

  @using (Html.BeginForm())
  {
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", @class = "form-control", required = "required" })
    <br />
    @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control", required = "required" })
    <br />
    @Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = "Phone number", @class = "form-control", required = "required" })
    <br />
    @Html.TextBoxFor(model => model.ScheduledAppointment, new { type = "datetime-local", @class = "form-control", required = "required" })
    <br />
    @Html.DropDownList("StylistId", null, htmlAttributes: new { @class = "form-control", required = "required" })
    <br />
    <br />
    <input type="submit" value="Add" class="btn btn-primary" />
  }
</div>
<br />
<p>@Html.ActionLink("Show all clients", "Index")</p>