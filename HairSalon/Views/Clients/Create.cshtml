@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="form-container">
  <h1>Add a new client</h1>

  @using (Html.BeginForm())
  {
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", required = "required" })
    <br />
    @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", required = "required" })
    <br />
    @Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = "Phone number", required = "required" })
    <br />
    @Html.TextBoxFor(model => model.ScheduledAppointment, new { placeholder = "Schedule Appointment", type = "date", required = "required" })
    <br />
    @Html.DropDownList("StylistId")
    <br />
    <br />
    <input type="submit" value="Add" class="btn btn-primary" />
  }
</div>
<br />
<p>@Html.ActionLink("Show all clients", "Index")</p>