@{
  Layout = "_Layout";
}

@using HairSalon.Models;

@if (@Model.Count == 0)
{
  <h3>No stylists added.</h3>
} 

<h1>Stylists</h1>
    
@foreach (Stylist stylist in Model)
{
  <div class="stylists">
    @Html.ActionLink($"View All {@stylist.Name}", "Details", new { id = stylist.StylistId })
  </div>
}
