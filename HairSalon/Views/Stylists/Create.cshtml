@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="form-container">
  <h1>Add a new stylist</h1>
  @using (Html.BeginForm())
  {
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
    <br />
    @Html.TextBoxFor(model => model.Email, new { placeholder = "Email" })
    <br />
    @Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = "Phone number" })
    <br />
    <input type="submit" value="Add" class="btn btn-primary" />
  }
</div>
<br />
<p>@Html.ActionLink("Show all stylists", "Index")</p>