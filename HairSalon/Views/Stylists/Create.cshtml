@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="form-container">
  <h2>NEW STYLIST</h2>

  @using (Html.BeginForm())
  {
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", @class = "form-control" })
    @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control" })
    @Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = "Phone number", @class = "form-control" })
    <br />
    <input type="submit" value="Add" class="btn btn-dark btn-sm" />
  }
</div>
<br />