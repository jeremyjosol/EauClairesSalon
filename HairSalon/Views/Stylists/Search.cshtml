@{
    Layout = "_Layout";
}

@using HairSalon.Models;

@if (@Model.Count == 0)
{
  <h2>No stylists have been found.</h2>
}

@foreach (Stylist stylist in Model)
{
  <h2>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</h2>
}
<br />
@Html.ActionLink("All Stylists", "Index")